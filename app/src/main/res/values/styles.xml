<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/button</item>
        <item name="buttonStyle">@style/button</item>
    </style>

    <!-- TODO: Add necessary styles -->

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="elecRowHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="elecRowDate">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="votingInfoH1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="votingInfoH2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="votingInfoH3">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="votingInfoLarge">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="votingInfoMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="votingLink" parent="votingInfoMedium">
        <item name="drawableStartCompat">@drawable/ic_link</item>
        <item name="android:drawablePadding">8dp</item>
    </style>



</resources>
